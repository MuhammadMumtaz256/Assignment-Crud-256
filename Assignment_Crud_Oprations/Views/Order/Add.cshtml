@model Assignment_Crud_Oprations.Models.OrderModel
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" action="/Order/Add">
    <div class="form-group">
        <label for="usr">Please Enter Name Product:</label>
        <input type="text" class="form-control" id="usr" name="name" required>
    </div>
  
    <div class="form-group">
        <label for="usr">Please Enter price of product:</label>
        <input type="number" class="form-control" id="usr" name="price" placeholder="Rupees" required>
    </div>
    <div class="form-group">
        <span>quantity : </span>
        <input type="number" class="form-control" id="usr" name="quantity" min="1" max="1000" value="1" required>
        <span>/Kg</span>
    </div>

    <div class="form-group">
        <label for="comment">Write Discription About:</label>
        <textarea class="form-control" rows="5" id="comment" name="discription" required></textarea>
    </div>
    <button class="btn btn-primary" type="submit"> Submit </button>

</form>
